{
  "name": "booking-service",
  "version": "1.0.0",
  "private": true,
  "description": "Booking microservice for Yoga Spa Platform",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "build": "nest build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "type-check": "tsc --noEmit",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:integration": "jest --testPathPattern=integration",
    "test:load": "artillery run load-tests/load-test.yml",
    "test:security": "npm run test:security-scan && npm run test:owasp",
    "test:security-scan": "node scripts/security-scan.js",
    "test:owasp": "npx @techteamer/owasp-js --path ./",
    "test:performance": "k6 run tests/performance.js",
    "test:complete": "npm run test && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run test:complete -- --ci --maxWorkers=2",
    "test:debug": "node --inspect-brk -r ts-node/register -r tsconfig-paths/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.20",
    "@nestjs/core": "^10.4.20",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/swagger": "^7.1.0",
    "@prisma/client": "^5.3.1",
    "amqplib": "^0.10.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "ioredis": "^5.3.2",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/amqplib": "^0.10.1",
    "@types/express": "^4.17.17",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.19.27",
    "jest": "^29.6.4",
    "prisma": "^5.3.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
